<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>

    <session-factory>
        <property name="hibernate.connection.driver_class">org.hsqldb.jdbcDriver</property>
        <property name="hibernate.connection.url">jdbc:hsqldb:hsql://localhost:9001/DocNet</property>
        <property name="hibernate.connection.username">sa</property>
        <property name="connection.password"></property>
        <property name="connection.pool_size">1</property>
        <property name="hibernate.dialect">org.hibernate.dialect.HSQLDialect</property>
        <property name="show_sql">true</property>

        <mapping class="model.Usuario"/>
        <mapping class="model.Direccion"/>
        <mapping class="model.Doctor"/>
        <mapping class="model.HistoriaClinica"/>
        <mapping class="model.HorariosDeAtencion"/>
        <mapping class="model.Hospital"/>
        <mapping class="model.ObraSocial"/>
        <mapping class="model.Paciente"/>
        <mapping class="model.Consulta"/>
        <mapping class="model.Turno"/>
        <mapping class="model.Especificacion"/>


    </session-factory>

</hibernate-configuration>
